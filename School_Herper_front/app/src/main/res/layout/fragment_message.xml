<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.fragment.MessageFragment"
    android:id="@+id/frame_message">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_yellow"
        android:padding="1dp">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="私信"
            android:textSize="26dp"
            android:textColor="#FFFFFF"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ln_user"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/box_color1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/bigmessage"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="我的通知"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="官方通知"
                android:textSize="14dp"
                android:textColor="#888888"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/home_publish_arrows_right"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_a"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/box_color1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/people1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="小红"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="你的单子我接了"
                android:textSize="14dp"
                android:textColor="#888888"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12:21"
                android:textSize="12dp"
                android:textColor="#888888"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_b"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/box_color1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/people2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="小明"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="你的单子我接了"
                android:textSize="14dp"
                android:textColor="#888888"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="12:21"
                android:textColor="#888888"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_c"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/box_color1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/people3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="小黑"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="你的单子我接了"
                android:textSize="14dp"
                android:textColor="#888888"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="12:21"
                android:textColor="#888888"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>