<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.fragment.MineFragment"
    android:id="@+id/frame_mine">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/myback">
            <TextView
                android:id="@+id/tv_set"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="设置"
                android:textColor="#313332"
                android:textSize="22dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="130dp"
            android:src="@drawable/myhead" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                android:textColor="#0F0F0F"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="个性签名"
                android:textColor="#0F0F0F"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/tv_write"
                android:textColor="#7D7777"
                android:textSize="16dp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textColor="#BBBBBB" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:textColor="#101010" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="#BBBBBB" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_realname"
                android:textColor="#101010" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#BBBBBB" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sex"
                android:textColor="#101010" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="学校"
                android:textColor="#BBBBBB" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="河北师范大学"
                android:textColor="#101010" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/authenok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="信誉度"
                android:textColor="#BBBBBB" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/zuanshi" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/zuanshi" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/zuanshi"
                android:layout_marginRight="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_money"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/moneybag"
                android:layout_marginLeft="250dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"></LinearLayout>
    </LinearLayout>

</FrameLayout>