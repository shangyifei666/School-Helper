<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/wallet_L_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:id="@+id/wallet_image_goback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/goback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/wallet_L_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/wallet_text1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="3000"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="我的余额"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wallet_L_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <Button
            android:id="@+id/btn_wallet_1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/wallet1"
            android:text="充值"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_wallet_2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/wallet1"
            android:text="充值"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="账单明细"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/home_publish_arrows_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="我的银行卡"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="未添加"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/home_publish_arrows_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="我的支付宝"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="未添加"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/home_publish_arrows_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="支付设置"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/home_publish_arrows_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="常见问题"
            android:textColor="#0000FF"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>